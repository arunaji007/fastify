{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}